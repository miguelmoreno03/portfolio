---
import NextJSIcon from "../icons/NextJSIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import JavaIcon from "../icons/JavaIcon.astro";
import SpringIcon from "../icons/SpringIcon.astro";

const TAGS = {
  SPRING: {
    name: "SpringBoot",
    class: "bg-green-800",
    icon: SpringIcon,
  },
  JAVA: {
    name: "Java",
    class: "bg-slate-100 text-black",
    icon: JavaIcon,
  },
  REACT: {
    name: "React.js",
    class: "bg-[#222222] text-white",
    icon: ReactIcon,
  },
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJSIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
};
const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG logos",
    description:
      "Created from scratch with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands. Optimized for SEO and performance.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    video: "/Digital-Booking-Demo.webm",
    tags: [TAGS.REACT, TAGS.JAVA, TAGS.SPRING],
  },
];
---

{
  PROJECTS.map(({ video, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold  text-sky-300 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <video
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={video}
        controls
      />
    </article>
  ))
}
